<Window x:Class="Article_Graph_Analysis_Application.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:wpfgraph="clr-namespace:Microsoft.Msagl.WpfGraphControl;assembly=Microsoft.Msagl.WpfGraphControl"
		Title="Makale Graf Analiz ve Keşif Sistemi"
		Height="900"
		Width="1600"
		WindowState="Maximized"
		KeyDown="Window_KeyDown">

	<Window.Resources>
		<Style x:Key="ModernButton"
			   TargetType="Button">
			<Setter Property="Background"
					Value="#2196F3"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="Padding"
					Value="15,8"/>
			<Setter Property="Margin"
					Value="5"/>
			<Setter Property="BorderThickness"
					Value="0"/>
			<Setter Property="FontSize"
					Value="13"/>
			<Setter Property="FontWeight"
					Value="SemiBold"/>
			<Setter Property="Cursor"
					Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
								CornerRadius="4"
								Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center"
											  VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Setter Property="Background"
							Value="#1976D2"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="InfoPanel"
			   TargetType="Border">
			<Setter Property="Background"
					Value="#F5F5F5"/>
			<Setter Property="BorderBrush"
					Value="#E0E0E0"/>
			<Setter Property="BorderThickness"
					Value="1"/>
			<Setter Property="CornerRadius"
					Value="6"/>
			<Setter Property="Padding"
					Value="15"/>
			<Setter Property="Margin"
					Value="5"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0"
				Background="#1565C0"
				Padding="15">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<TextBlock Grid.Column="0"
						   Text="Graf [Overview] - 50 Makale gösteriliyor."
						   x:Name="HeaderText"
						   Foreground="White"
						   FontSize="18"
						   FontWeight="Bold"
						   VerticalAlignment="Center"/>

				<StackPanel Grid.Column="1"
							Orientation="Horizontal">
					<Button Content="H-Index Hesapla"
							Click="CalculateHIndex_Click"
							Style="{StaticResource ModernButton}"/>
					<Button Content="Betweenness Centrality"
							Click="CalculateBetweenness_Click"
							Style="{StaticResource ModernButton}"/>
					<Button Content="K-Core"
							Click="ApplyKCore_Click"
							Style="{StaticResource ModernButton}"/>
				</StackPanel>
			</Grid>
		</Border>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="350"/>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0"
					BorderBrush="#E0E0E0"
					BorderThickness="1"
					Margin="10"
					ClipToBounds="True">
				<Grid x:Name="GraphHost"
					  ClipToBounds="True"/>
			</Border>

			<ScrollViewer Grid.Column="1"
						  VerticalScrollBarVisibility="Auto">
				<StackPanel Margin="10">

					<Border Style="{StaticResource InfoPanel}">
						<StackPanel>
							<TextBlock Text="NAVİGASYON"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<TextBlock Text="F1: Özet (Top 50)"
									   Margin="0,3"/>
							<TextBlock Text="F2: Orta (Top 150)"
									   Margin="0,3"/>
							<TextBlock Text="F3: Tüm Detaylar"
									   Margin="0,3"/>
							<TextBlock Text="F4: En Çok Atıf Alan 5"
									   Margin="0,3"
									   Foreground="#FF6F00"
									   FontWeight="SemiBold"/>
							<TextBlock Text="F5: Veriyi Yenile"
									   Margin="0,3"/>
						</StackPanel>
					</Border>

					<Border Style="{StaticResource InfoPanel}">
						<StackPanel>
							<TextBlock Text="ETKİLEŞİM"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<TextBlock Text="• Düğme Sol Tık: Genişlet"
									   Margin="0,3"
									   TextWrapping="Wrap"/>
							<TextBlock Text="• Mouse Tekerleri: Zoom"
									   Margin="0,3"/>
							<TextBlock Text="• Sağ Tık Sürükle: Gezinti"
									   Margin="0,3"
									   TextWrapping="Wrap"/>
						</StackPanel>
					</Border>

					<Border Style="{StaticResource InfoPanel}">
						<StackPanel>
							<TextBlock Text="GRAF İSTATİSTİKLERİ"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<TextBlock x:Name="StatisticsText"
									   TextWrapping="Wrap"
									   FontSize="12"/>
						</StackPanel>
					</Border>

					<Border Style="{StaticResource InfoPanel}"
							x:Name="HIndexPanel"
							Visibility="Collapsed">
						<StackPanel>
							<TextBlock Text="H-INDEX SONUÇLARI"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<TextBlock x:Name="HIndexResultText"
									   TextWrapping="Wrap"
									   FontSize="12"/>
						</StackPanel>
					</Border>

					<Border Style="{StaticResource InfoPanel}"
							x:Name="BetweennessPanel"
							Visibility="Collapsed">
						<StackPanel>
							<TextBlock Text="BETWEENNESS CENTRALITY"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<ScrollViewer MaxHeight="300"
										  VerticalScrollBarVisibility="Auto">
								<TextBlock x:Name="BetweennessResultText"
										   TextWrapping="Wrap"
										   FontSize="11"/>
							</ScrollViewer>
						</StackPanel>
					</Border>

					<Border Style="{StaticResource InfoPanel}">
						<StackPanel>
							<TextBlock Text="K-CORE DECOMPOSITION"
									   FontWeight="Bold"
									   FontSize="14"
									   Margin="0,0,0,10"
									   Foreground="#1565C0"/>

							<TextBlock Text="K değeri:"
									   Margin="0,5"/>
							<TextBox x:Name="KValueTextBox"
									 Text="3"
									 FontSize="12"
									 Padding="5"
									 Margin="0,5"/>
						</StackPanel>
					</Border>

				</StackPanel>
			</ScrollViewer>
		</Grid>

		<Border Grid.Row="2"
				Background="#37474F"
				Padding="10,5">
			<TextBlock x:Name="StatusText"
					   Text="Hazır"
					   Foreground="White"
					   FontSize="12"/>
		</Border>
	</Grid>
</Window>